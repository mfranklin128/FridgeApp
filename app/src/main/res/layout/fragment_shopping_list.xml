<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mfranklin.fridgeapp.ShoppingListFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/shopping_list_new_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:text="Add Item(s)"
            android:layout_alignParentTop="true"/>
        <ListView
            android:id="@+id/shopping_list_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopping_list_new_item"/>
        <include layout="@layout/destination_footer"/>
    </RelativeLayout>

</FrameLayout>
