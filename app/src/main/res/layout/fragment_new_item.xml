<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.mfranklin.fridgeapp.NewItemFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_item_header"
            android:background="@drawable/image_border">
            <EditText
                android:id="@+id/new_item_search_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_item_create_type"
                style="?android:attr/borderlessButtonStyle"
                android:src="@mipmap/ic_add" />
        </LinearLayout>
        <ListView
            android:id="@+id/new_item_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_item_header"
            />
    </RelativeLayout>
</FrameLayout>
